{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
