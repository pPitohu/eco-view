{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "pretty": true,
        "outDir": "./dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "types": [
        "node"
    ],
    "typeRoots": [
        "src/types/global.d.ts"
    ]
}
